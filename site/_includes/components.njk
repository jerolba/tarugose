{% macro button(data) %}
    <a href="{{ data.url }}">
        {{ data.text }}
    </a>
{% endmacro %}

{% macro img(data) %}

    {% if data.url %}
        <a href="{{ data.url }}" target="_blank">
            <img src="{{ data.src }}" alt="{{ data.alt }}">
        </a>
    {% else %}
        <img src="{{ data.src }}" alt="{{ data.alt }}">
    {% endif %}
{% endmacro %}