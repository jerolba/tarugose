<section class="ly-section calendar" id="{{ calendar.id }}">
    <header class="calendar-header">
        <h1>{{ calendar.title }}</h1>
    </header>

    <div class="calendar-text">
        {{ calendar.text | md | type | safe }}
    </div>

    <ul class="calendar-days js-calendar">
        {% for day in calendar.days %}
        <li>
            <div class="calendar-day">
                <h4>{{ day.title }}</h4>

                <ul>
                    {% for event in day.events %}
                    <li>
                        <details class="calendar-event">
                            <summary class="calendar-event-header">
                                {{ event.hour }}
                                {{ event.speakers }}

                                <strong>{{ event.title }}</strong>
                            </summary>

                            <div class="calendar-event-text">
                                {{ event.text | md | type | safe }}
                            </div>
                        </details>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </li>
        {% endfor %}
    </ul>

    <footer class="calendar-buttons">
        <button class="js-prev">Prev</button>
        <button class="js-next">Next</button>
    </footer>
</section>
